---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Pool Man Mississauga - Expert pool service, maintenance, repairs, and renovations since 1978. A+ BBB rated. Serving Mississauga and the GTA." } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href={`${base}images/logo.png`} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <header class="bg-[#1a5f7a] text-white sticky top-0 z-50 shadow-lg">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16 md:h-20">
          <a href={base} class="flex items-center gap-2 sm:gap-3">
            <img src={`${base}images/logo.png`} alt="Pool Man Mississauga" class="h-8 sm:h-10 md:h-12 w-auto" />
            <div>
              <span class="font-bold text-base sm:text-lg md:text-xl">Pool Man</span>
              <span class="text-xs sm:text-sm block text-blue-200">Mississauga</span>
            </div>
          </a>

          <!-- Mobile menu button -->
          <button id="mobile-menu-btn" class="md:hidden p-2" aria-label="Toggle menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>

          <!-- Desktop nav -->
          <div class="hidden md:flex items-center gap-6">
            <a href={base} class="hover:text-blue-200 transition-colors">Home</a>
            <a href={`${base}services`} class="hover:text-blue-200 transition-colors">Services</a>
            <a href={`${base}gallery`} class="hover:text-blue-200 transition-colors">Gallery</a>
            <a href={`${base}about`} class="hover:text-blue-200 transition-colors">About</a>
            <a href={`${base}contact`} class="bg-white text-[#1a5f7a] px-4 py-2 rounded-lg font-semibold hover:bg-blue-100 transition-colors">Contact Us</a>
          </div>
        </div>

        <!-- Mobile nav -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="flex flex-col gap-3">
            <a href={base} class="hover:text-blue-200 transition-colors py-2">Home</a>
            <a href={`${base}services`} class="hover:text-blue-200 transition-colors py-2">Services</a>
            <a href={`${base}gallery`} class="hover:text-blue-200 transition-colors py-2">Gallery</a>
            <a href={`${base}about`} class="hover:text-blue-200 transition-colors py-2">About</a>
            <a href={`${base}contact`} class="bg-white text-[#1a5f7a] px-4 py-2 rounded-lg font-semibold text-center hover:bg-blue-100 transition-colors">Contact Us</a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-[#0d3d4d] text-white py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <div class="flex items-center gap-3 mb-4">
              <img src={`${base}images/logo.png`} alt="Pool Man Mississauga" class="h-12 w-auto" />
              <div>
                <span class="font-bold text-xl">Pool Man</span>
                <span class="text-sm block text-blue-300">Mississauga</span>
              </div>
            </div>
            <p class="text-gray-300">Serving Mississauga and the GTA since 1978. 45+ years of trusted pool service.</p>
            <div class="mt-4 flex items-center gap-2">
              <span class="bg-green-600 text-white text-xs font-bold px-2 py-1 rounded">A+ BBB</span>
              <span class="text-yellow-400">★★★★★</span>
              <span class="text-sm text-gray-300">4.6/5 Google</span>
            </div>
          </div>

          <div>
            <h4 class="font-bold text-lg mb-4">Quick Links</h4>
            <ul class="space-y-2 text-gray-300">
              <li><a href={`${base}services`} class="hover:text-white transition-colors">Services</a></li>
              <li><a href={`${base}gallery`} class="hover:text-white transition-colors">Gallery</a></li>
              <li><a href={`${base}about`} class="hover:text-white transition-colors">About Us</a></li>
              <li><a href={`${base}contact`} class="hover:text-white transition-colors">Contact</a></li>
            </ul>
          </div>

          <div>
            <h4 class="font-bold text-lg mb-4">Contact Us</h4>
            <ul class="space-y-2 text-gray-300">
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <a href="tel:9056074613" class="hover:text-white transition-colors">(905) 607-4613</a>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <a href="mailto:service@poolmanmississauga.ca" class="hover:text-white transition-colors">service@poolmanmississauga.ca</a>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>31-3150 Ridgeway Dr.<br />Mississauga, ON L5L 5R5</span>
              </li>
            </ul>
          </div>
        </div>

        <div class="border-t border-gray-600 mt-8 pt-8 text-center text-gray-400 text-sm">
          <p>&copy; {new Date().getFullYear()} Pool Man Mississauga. All rights reserved.</p>
          <p class="mt-2">Proudly serving the GTA since 1978</p>
        </div>
      </div>
    </footer>

    <script>
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      menuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
